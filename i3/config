# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

#clipboard manager
exec --no-startup-id clipmenud

# and nm-applet is a desktop environment-independent system tray GUI for it.
# exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

#start picom
exec_always --no-startup-id picom

exec --no-startup-id xset -dpms
exec --no-startup-id xset s off
exec --no-startup-id xset s noblank

# Media player controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym $mod+Shift+z exec --no-startup-id xset dpms force off

exec --no-startup-id xsetroot -cursor_name Bibata-Modern-Clasic

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# launch flameshot gui on print key
bindsym $mod+Shift+s exec --no-startup-id flameshot gui

#brightness
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86MonBrightnessUp exec brightnessctl set +10%

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop,
tiling_drag modifier titlebar

# start a terminal
bindsym $mod+Return exec kitty
bindsym $mod+Shift+Return exec alacritty
bindsym $mod+t exec kitty --class "kitty-floating"

# kill focused window
bindsym $mod+q kill

# start rofi (a program launcher)
bindsym $mod+d exec dmenu_run -i  \
-fn 'Poppins:size=18' -nb '#141c21' -nf '#93a1a1' \
-sb '#289c93' -sf '#141c21'

bindsym $mod+s exec --no-startup-id ~/.config/rofi/launchers/type-7/launcher.sh
bindsym $mod+a exec i3-dmenu-desktop --dmenu="dmenu -i  \
-fn 'Poppins:size=18' -nb '#141c21' -nf '#93a1a1' \
-sb '#289c93' -sf '#141c21'"

bindsym $mod+v exec --no-startup-id clipmenu -i \
-fn 'Poppins:size=18' -nb '#141c21' -nf '#93a1a1' \
-sb '#289c93' -sf '#141c21'

# start powermenu
bindsym $mod+BackSpace exec --no-startup-id ~/.config/i3/powermenu/powermenu.sh

# change focus
bindsym $mod+Shift+h focus left
bindsym $mod+Shift+j focus down
bindsym $mod+Shift+k focus up
bindsym $mod+Shift+l focus right

#togle picom
bindsym $mod+p exec bash -c 'pgrep -x picom && pkill picom || picom --experimental-backends -b'

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

